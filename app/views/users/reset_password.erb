<div class='container'>
	<header class='container-header'>
		Welcome <%= @user.email %>, enter a new password
	</header>
	<form class='standard' action='/users/confirm_reset_password' method='post'>
			Password: <input type='password' name='new_password'>
			Confirm Password:<input type='password' name='new_password_confirmation'>
			<input type='hidden' name='token' value=<%= @token %> >
			<input class='button green' type='submit' value='Reset'>
	</form>
</div>